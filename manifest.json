{
  "manifest_version": 2,
  "name": "XRechnung-Viewer",
  "version": "1.2",
  "description": "Zeigt XRechnungen / ZUGFeRD-Rechnungen der ausgew√§hlten E-Mail an.",
  "developer": {
    "name": "Dan Dyse",
    "url": "https://github.com/humpataa/XRechnung-Viewer"
  },
  "permissions": [
    "tabs",
    "messagesRead",
    "activeTab"
  ],
  "background": {
    "scripts": []
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.png",
    "default_title": "XRechnungen"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "xrechnung-viewer@example.com",
      "strict_min_version": "91.0"
    }
  }
}

